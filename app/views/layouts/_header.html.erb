<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header.home"), "home" %></li>
        <li><%= link_to t("header.help"), "help" %></li>
        <li><%= link_to t("header.login"), "login" %></li>
        <% if logged_in? %>
        <li><%= link_to t("users"), "#" %></li>
        <li class="dropdown">
        <%= link_to t("login.account"), "#",class: "dropdown-toggle", data: {toggle: "dropdown" } %>
          <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t("login.profile"), current_user %></li>
            <li><%= link_to t("login.settings"), "#" %></li>
            <li class="divider"></li>
            <li> <%= link_to t("login.logout"), "logout", method: :delete %></li>
          </ul>
        </li>
        <li><%= link_to "EN", root_path(locale: :en) %></li>
        <li><%= link_to "VN", root_path(locale: :vn) %></li>
      </ul>
    </nav>
  </div>
</header>
